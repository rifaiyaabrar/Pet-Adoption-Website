    <script>

      window.onscroll = function(){
          runOnScroll();
      }


      function runOnScroll() {
          var element = document.getElementsByTagName('nav')  ;
          if(document.body.scrollTop >= 50 || document.documentElement.scrollTop>=50 ) {
              element[0].classList.remove('nsize')
              element[0].classList.add('shrink')
              document.querySelector(".navbar-brand").style.fontSize="1.8rem";
              for (var i = 0; i < document.querySelectorAll(".nav-link").length; i++) {
              document.querySelectorAll(".nav-link")[i].style.fontSize="1rem";
              }
          } else {
              element[0].classList.remove('shrink')
              element[0].classList.add('nsize')
              document.querySelector(".navbar-brand").style.fontSize="2.2rem";
               for (var i = 0; i < document.querySelectorAll(".nav-link").length; i++) {
              document.querySelectorAll(".nav-link")[i].style.fontSize="1.2rem";
              }
          }


      };

    </script>

