<%- include('./partials/metadata') %>
 <%- is_admin ? include('./partials/headerAdmin', {username}) : include('./partials/header', {username}) %>

<main style="background-color:#85C88A;">
  <div class="container-fluid">
        <h1 class="big-heading" style="color:white;">Fillup to Donate</h1>
        <form class="" action="#" method="post" >
          <div class="form-floating">
            <input type="text" name="name"class="form-control"  placeholder="Name" required>
            <label for="floatingPassword">Name</label>
          </div>
          <div class="form-floating">
            <input type="email" name="email"class="form-control"  placeholder="email" required>
            <label for="floatingPassword">Email Address</label>
          </div>
          <div class="form-floating">
            <input type="text" name="phone"class="form-control"  placeholder="phone" required>
            <label for="floatingPassword">Phone Number</label>
          </div>
          <div class="form-floating" style="width:40%">
            <input type="file" name="NID image"class="form-control" accept="image/*" placeholder="NID" style="
      padding-top: 1.925rem;" required>
            <label for="floatingPassword">NID</label>
          </div>
          <div class="form-floating">
            <input type="text" name="petName"class="form-control"  placeholder="petName" required>
            <label for="floatingPassword">Pet Name</label>
          </div>
          <div class="form-floating" style="width:40%">
            <input type="file" name="Pet image"class="form-control" accept="image/*" placeholder="Pet Image" style="
      padding-top: 1.925rem;" required>
            <label for="floatingPassword">Pet Image</label>
          </div>
          <div class="select1" style="  position: relative;  left: 0px;display: flex;width: 20em;  height: 3em;border-radius: 20px;">
          <select>
          <option value="" disabled selected>Select Your Pet Category</option>
          <option value="1">Cat</option>
          <option value="2">Dog</option>
          <option value="3">Bird</option>
          </select>
          </div>
          <div class="form-floating">
            <input type="text" name="description"class="form-control"  placeholder="Description" required>
            <label for="description">Description</label>
          </div>
          <div class="form-floating">
            <input type="text" name="aInformation"class="form-control"  placeholder="Information">
            <label for="aInformation">Additional Information</label>
          </div>
          <div class="form-floating">
            <input type="text" name="requirements"class="form-control"  placeholder="requirments">
            <label for="requirements">Requirements</label>
          </div>
          <button class="w-100 btn btn-lg btnSubmit" type="submit" style="background-color:#04AA6D;margin-top:20px">Submit</button>

        </form>
      </div>
</main>










